{
  "version": "2.1",
  "networks": {
    "default": {
      "external": {
        "name": "ubuntu_default"
      }
    }
  },
  "services": {
    "buildkite": {
      "environment": [
        "SERVICE_2222_NAME=ssh"
      ],
      "volumes": [
        "/data:/data",
        "/config:/config"
      ],
      "ports": [
        "${BLOCK_SSH_PORT}"
      ],
      "cap_add": [
        "NET_ADMIN"
      ],
      "networks": {
        "default": {
          "ipv4_address": "${NET_PREFIX}.17"
        }
      },
      "dns_search": "node.consul",
      "image": "${BLOCK_REGISTRY}/block:buildkite",
      "hostname": "buildkite"
    }
  }
}
